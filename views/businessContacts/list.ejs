<%-include ../partials/header.ejs%>
    <%-include ../partials/main_nav.ejs%>
        <!--Main Nav Navigation-->
        <main class="container">
            <div class="row">
                <div class="offset-md-1 col-md-10">
                    <h1>
                        <%=title %>
                    </h1>
                    <br>
                    <table class="table table-bordered table-striped table-hover">
                        <!--Header Row-->
                        <tr>
                            <%if(typeof username=='string' && username){%>
                                <th class="text-center col-2">Contact Name</th>
                                <th class="text-center col-2">Contact Number</th>
                                <th class="text-center col-1">Email</th>

                                <th class="text-center col-1"></th>
                                <th class="text-center col-1"></th>
                                <%}else{%>
                                    <th class="text-center col-2">Contact Name</th>
                                    <th class="text-center col-2">Contact Number</th>
                                    <th class="text-center col-1">Email</th>

                                    <%}%>
                        </tr>
                        <%for(let count=0; count < contactsList.length; count ++){%>
                            <tr>
                                <%if(typeof username=='string' && username){%>
                                    <td class="text-center col-2">
                                        <%=contactsList[count].name%>
                                    </td>
                                    <td class="text-center col-2">
                                        <%=contactsList[count].number%>
                                    </td>
                                    <td class="text-center col-1">
                                        <%=contactsList[count].email%>
                                    </td>
                                    <td class="text-center col-1"><a
                                            href="/contactsList/edit/<%=contactsList[count]._id%>"
                                            class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Update</a>
                                    </td>
                                    <td class="text-center col-1"><a
                                            href="/contactsList/delete/<%=contactsList[count]._id%>"
                                            class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a>
                                    </td>
                                    <%}else{%>
                                        <td class="text-center col-2">
                                            <%=contactsList[count].name%>
                                        </td>
                                        <td class="text-center col-2">
                                            <%=contactsList[count].number%>
                                        </td>
                                        <td class="text-center col-1">
                                            <%=contactsList[count].email%>
                                        </td>

                                        <%}%>
                            </tr>
                            <%}%>
                    </table>
                </div>
            </div>
        </main>

        <!--<h1><%= title %></h1>-->
        <!--<p>Welcome to <%= title %></p>-->
        <!--Script section-->

        <%-include ../partials/bottom_nav.ejs%>
            <%-include ../partials/footer.ejs%>