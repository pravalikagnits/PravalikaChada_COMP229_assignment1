<%-include ../partials/header.ejs%>
    <%-include ../partials/main_nav.ejs%>
        <main class=" main-screen">
                    <div class="row justify-content-md-center">
                        <div class="offset md-4 col-md-4">
                            <h1 class="color-white">Please Login</h1>
                            <form method="POST" autocomplete="off">
                                <fieldset class="form-group">
                                    <label for="username" class="color-white">username:</label>
                                    <input type="text" class="form-control" name="username" placeholder="Enter username"
                                        id="username" required autofocus>
                                </fieldset>
                                <br/>
                                <fieldset class="form-group">
                                    <label for="password" class="color-white">password:</label>
                                    <input type="password" class="form-control" name="password"
                                        placeholder="Enter password" id="password" required>
                                </fieldset>
                                <br/>
                                <fieldset class="form-group text-right">
                                    <input type="submit" class="btn btn-success" value="Login">
                                    <a href="/"><input type="button" class="btn btn-warning" value="cancel"></a>
                                </fieldset>
                            </form>
                        </div>
                    </div>
        </main>


        <%-include ../partials/bottom_nav.ejs%>
            <%-include ../partials/footer.ejs%>